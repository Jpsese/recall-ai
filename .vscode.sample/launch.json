{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run API Server",
        "type": "debugpy",
        "request": "launch",
        "module": "uvicorn",
        "args": ["recall_ai.api.server:create_app", "--factory", "--reload"],
        "jinja": true,
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        },
        "cwd": "${workspaceFolder}"
      },
      {
        "name": "Run Discord Bot",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/src/recall_ai/run_bot.py",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        },
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      },
      {
        "name": "Debug Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        },
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      },
      {
        "name": "Debug Tests",
        "type": "debugpy",
        "request": "launch",
        "module": "pytest",
        "args": ["tests", "-v"],
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        },
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      }
    ]
  }
  
  